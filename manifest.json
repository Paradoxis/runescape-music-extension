{
    "manifest_version": 2,
    "name": "RuneScape Music",
    "description": "This extension will play a random song from the RuneScape Soundtrack.",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "/js/background.js",
            "/js/dropbox_js/dropbox.min.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "RuneScape Music",
        "default_icon": "/images/icon.png"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs",
        "unlimitedStorage"
    ]
}
